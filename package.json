{
  "name": "openmind-ai",
  "version": "1.0.0",
  "description": "Open-source AI assistant frontend for the Anthropic Claude API",
  "main": "index.html",
  "homepage": "https://openmind-ai.github.io/openmind",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmind-ai/openmind.git"
  },
  "bugs": {
    "url": "https://github.com/openmind-ai/openmind/issues"
  },
  "keywords": [
    "ai",
    "assistant",
    "claude",
    "anthropic",
    "open-source",
    "chatgpt",
    "llm",
    "privacy"
  ],
  "author": "OpenMind Contributors",
  "license": "MIT",
  "scripts": {
    "start": "npx serve . -p 3000",
    "dev": "npx live-server --port=3000 --open=index.html",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test tests/e2e/",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"*.html\" \"*.md\"",
    "validate": "html-validate index.html",
    "build": "echo 'No build step required â€” OpenMind is framework-free!'",
    "release": "bash scripts/release.sh",
    "docker:build": "docker build -t openmind-ai/openmind .",
    "docker:run": "docker run -p 8080:80 openmind-ai/openmind"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "html-validate": "^8.7.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "markdown-link-check": "^3.12.0",
    "prettier": "^3.1.0",
    "serve": "^14.2.1",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "tests/unit/**/*.test.js",
      "src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-var": "error",
      "prefer-const": "error",
      "no-console": "warn",
      "eqeqeq": "error",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "printWidth": 100
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/openmind-ai"
  }
}
